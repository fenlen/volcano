<% volcanoes = UniqVolcano.all %>
<% eruptions = Eruption.all %>
var map;
function initMap() {
    var markers = [];
    <% volcanoes.each do |volcano| %>
        var marker<%= volcano.id %> = {lat: <%= volcano.Latitude.to_f %>, lng:<%= volcano.Longitude.to_f %> };
    <% end %>
    map = new google.maps.Map(
        document.getElementById('map'), { center: { lat: 0.0, lng: 0.0 }, zoom: 3, mapTypeId: google.maps.MapTypeId.SATELLITE });
    <% volcanoes.each do |volcano| %>
        var contentString = `<div><h1><%= volcano.Name %></h1><p><%= volcano.Country %></p><p>Elevation: <%= volcano.Elevation %><p>Recorded eruptions: <%= volcano.eruption.count %></p><a href="uniq_volcanos/<%= volcano.id %>" class="w3-button">Details</a></div>`;
        var infoWindow<%= volcano.id %> = new google.maps.InfoWindow({content: contentString});
        var markeronmap<%= volcano.id %> = new google.maps.Marker({position: marker<%= volcano.id %>, map: map});
        markeronmap<%= volcano.id %>.addListener('click', function () {
            infoWindow<%= volcano.id %>.open(map, markeronmap<%= volcano.id %>);
        });
        markers.push(markeronmap<%= volcano.id %>)
    <% end %>
    var markerCluster = new MarkerClusterer(map, markers, 
        {imagePath: '/assets/clusters/m'});
    var heatmap = new google.maps.visualization.HeatmapLayer({
        data: getPoints(),
        map : map
        });
}

function toggleHeatmap() {
    heatmap.setMap(heatmap.getMap() ? null : map);
}

function changeGradient() {
    var gradient = [
        'rgba(0, 255, 255, 0)',
        'rgba(0, 255, 255, 1)',
        'rgba(0, 191, 255, 1)',
        'rgba(0, 127, 255, 1)',
        'rgba(0, 63, 255, 1)',
        'rgba(0, 0, 255, 1)',
        'rgba(0, 0, 223, 1)',
        'rgba(0, 0, 191, 1)',
        'rgba(0, 0, 159, 1)',
        'rgba(0, 0, 127, 1)',
        'rgba(63, 0, 91, 1)',
        'rgba(127, 0, 63, 1)',
        'rgba(191, 0, 31, 1)',
        'rgba(255, 0, 0, 1)'
    ]
    heatmap.set('gradient', heatmap.get('gradient') ? null : gradient);
}

function changeRadius() {
    heatmap.set('radius', heatmap.get('radius') ? null : 20);
}

function changeOpacity() {
    heatmap.set('opacity', heatmap.get('opacity') ? null : 0.2);
}

function getPoints() {
    var points = [];
    <% volcanoes.each do |volcano| %>
        points.push(new google.maps.LatLng(<%= volcano.Latitude.to_f %>, <%= volcano.Longitude.to_f %>));
    <% end %>
    return points
}